generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Section {
  id        Int         @id @default(autoincrement())
  number    Int         @unique
  title     String
  type      SectionType
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  documents Document[]
  subtitles Subtitle[]
  terms     Term[]

  @@index([type])
}

model Subtitle {
  id        Int        @id @default(autoincrement())
  sectionId Int
  title     String
  order     Int        @default(0)
  parentId  Int?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  parent    Subtitle?  @relation("SubtitleHierarchy", fields: [parentId], references: [id])
  children  Subtitle[] @relation("SubtitleHierarchy")
  section   Section    @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  terms     Term[]

  @@index([sectionId])
  @@index([parentId])
}

model Term {
  id                    Int                    @id @default(autoincrement())
  sectionId             Int
  itemNumber            String?
  term                  String
  description           String?                @db.LongText
  abbreviation          String?
  createdAt             DateTime               @default(now())
  updatedAt             DateTime               @updatedAt
  imageUrl              String?
  subtitleId            Int?
  abbreviationProposals AbbreviationProposal[]
  section               Section                @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  subtitle              Subtitle?              @relation(fields: [subtitleId], references: [id])

  @@index([sectionId])
  @@index([subtitleId])
  @@index([term])
}

model User {
  id                Int                    @id @default(autoincrement())
  username          String                 @unique
  passwordHash      String
  role              UserRole               @default(reader)
  createdAt         DateTime               @default(now())
  updatedAt         DateTime               @updatedAt
  proposals         AbbreviationProposal[] @relation("ProposalAuthor")
  reviewedProposals AbbreviationProposal[] @relation("ProposalReviewer")
}

model AbbreviationProposal {
  id                   Int            @id @default(autoincrement())
  termId               Int
  proposedAbbreviation String
  status               ProposalStatus @default(pending)
  createdById          Int
  reviewedById         Int?
  createdAt            DateTime       @default(now())
  updatedAt            DateTime       @updatedAt
  createdBy            User           @relation("ProposalAuthor", fields: [createdById], references: [id], onDelete: Cascade)
  reviewedBy           User?          @relation("ProposalReviewer", fields: [reviewedById], references: [id])
  term                 Term           @relation(fields: [termId], references: [id], onDelete: Cascade)

  @@index([termId])
  @@index([status])
  @@index([createdById])
  @@index([reviewedById], map: "AbbreviationProposal_reviewedById_fkey")
}

model Document {
  id          Int      @id @default(autoincrement())
  sectionId   Int
  code        String   @db.VarChar(64)
  title       String?
  contentHtml String?  @db.LongText
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  section     Section  @relation(fields: [sectionId], references: [id], onDelete: Cascade)

  @@unique([sectionId, code])
  @@index([sectionId])
}

enum SectionType {
  terms
  document
}

enum UserRole {
  admin
  editor
  reader
}

enum ProposalStatus {
  pending
  approved
  rejected
}
